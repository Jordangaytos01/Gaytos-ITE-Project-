import tkinter as tk


def greet():

    greeting_label.config(text="Hello, Welcome!")


root = tk.Tk()

root.title("Greeting App")


greeting_label = tk.Label(root, text="", font=("Helvetica", 16))

greeting_label.pack(pady=20)


greet_button = tk.Button(root, text="Greet", command=greet, font=("Helvetica", 14))

greet_button.pack(pady=10)


root.mainloop()
